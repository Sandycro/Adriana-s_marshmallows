<center><h2 class="mt-4"><%= @category.name %></h2></center>
<div class="container products">
  <div class="rounded p-4 mt-3">
    <% @category.products.each do |product| %>
      <div class="card-product">
          <% if product.photos.attached?%>
            <%= cl_image_tag product.photos.first.key, crop: :fill %>
          <% end %>
        <div class="card-product-infos">
        <h5 class="mt-3"><%= link_to product.name, category_product_path(product.id) %></h5>
          <p><%= product.description %></p>
          <p>£ <%= product.price %>.00</p>
          <p>Rating: <%= product.rating %> ⭐️⭐️⭐️⭐️</p>
          <%= link_to "", edit_category_product_path(product), class: "fas fa-edit"%>
          <%= link_to "", category_product_path(product.category), method: :delete, data: {confirm: "Are you sure?"}, class: "far fa-trash-alt" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div class="rounded bg-primary p-4 mt-3">
      <%= link_to "Add a new product", new_category_product_path(@category), class: "btn btn-primary"  %><br>
      <%= link_to 'Back', categories_path, class: "btn btn-primary"  %>
    </div>
  </div>
</div>

