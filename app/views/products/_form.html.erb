<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for [@category, @product] do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :rating %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Submit product", class: "btn btn-pink" %>
          <%= link_to 'Back', categories_path, class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
